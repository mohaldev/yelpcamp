<% include partials/header %> 

<nav class=" navbar nav justify-content-end">
  <a class="nav-link" href="#">Signup</a>
  <a class="nav-link" href="#">Login</a>
  <a class="nav-link" href="#">Logout</a>
</nav>

<div class="container">
    <header class="jumbotron">
    <div class="container">
        <h1>The campgrounds page!</h1>
        <p>You can see all great campgrounds here</p>
        <a class="btn btn-primary" href="/campgrounds/new">Add a new campground</a>
    </div>
    </header>
    <div class="container">
        <div class="row">
        
        <% campgroundsAll.forEach(function(campground) { %>
            <div class="col-lg-4 card">
                <img src="<%= campground.image %>">
                <div class="card-body">
                <h4 class="card-title"><%= campground.name %></h4>
        
                <p class="card-text"><a href="/campgrounds/<%= campground._id %>">More</a></p> 
                </div>
            </div>
            

        <% }) %>
        
        </div>
    </div>
</div>

<% include partials/footer %> 


