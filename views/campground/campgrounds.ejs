<% include ../partials/header %> 

<div class="container">
    <header class="jumbotron">
    <div class="container">
        <h2>The campgrounds page!</h2>
        <p>You can see all great campgrounds here</p>
        <a class="btn btn-primary" href="/campgrounds/new">Add a new campground</a>
    </div>
    </header>
    <div class="container">
        <div class="d-flex flex-row flex-wrap justify-content-between">
        
        <% campgroundsAll.forEach(function(campground) { %>
            <div class="card" style="width:300px; margin-bottom: 20px; border-radius: 2%;">
                <img src="<%= campground.image %>" style="border-radius: 2%">
                <div class="card-body">
                <h4 class="card-title"><%= campground.name %></h4>
        
                <p class="card-text"><a href="/campgrounds/<%= campground._id %>">More</a></p> 
                </div>
            </div>
            

        <% }) %>
        
        </div>
    </div>
</div>

<% include ../partials/footer %> 


