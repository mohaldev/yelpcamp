<% include ../partials/header %> 

<div class="container d-flex align-items-center flex-column">

    <p>Campground edit page</p>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" name="name" value="<%= campground.name%>">
        </div>  
        <div class="form-group">
            <input type="text" name="image" value="<%= campground.image%>">
        </div>
        <div class="form-group">
            <input type="text" name="desc" value="<%= campground.desc%>">
        </div>
        <button type="submit">Add</button>
    </form>
    <p><a href="/campgrounds">Back to all campgrounds</a></p>

</div>

<% include ../partials/footer %> 